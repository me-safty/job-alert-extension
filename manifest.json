{
  "manifest_version": 3,
  "name": "Upwork Job Helper",
  "version": "1.0",
  "description": "Extension to read job data from Upwork and generate proposals using Gemini.",
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "host_permissions": ["*://www.upwork.com/*", "http://localhost:3000/*", "http://localhost:5173/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html"  
  },
  "content_scripts": [
    {
      "matches": ["*://www.upwork.com/*"],
      "js": ["scripts/content.js"]
    }
  ]
}
